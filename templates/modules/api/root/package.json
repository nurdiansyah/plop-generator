{
  "name": "@deboxsoft/{{ kebabCase moduleName }}-api",
  "version": "0.0.0",
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/deboxsoft/{{ kebabCase moduleName }}",
    "directory": "packages/api"
  },
  "maintainers": [
    {
      "name": "Nurdiansyah",
      "email": "nur.diansyah.ckt@gmail.com"
    }
  ],
  "main": "index.js",
  "types": "types",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs"
    }
  },
  "files": [
    "types",
    "index.*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:rollup": "cre8-bundle",
    "build:tsc": "rimraf types clean && tsc",
    "lint": "eslint --fix 'src/**/*.ts'",
    "format": "prettier --write --plugin-search-dir=. src",
    "test": "ava",
    "test:watch": "ava -w",
    "bump": "pnpm run build && bump",
    "publish:dev": "pnpm publish --tag dev --no-git-checks",
    "release": "pnpm bump -t \"api-v\" -c \"release api v\" && pnpm publish",
    "release:dev": "pnpm bump prerelease && pnpm publish:dev"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@deboxsoft/module-core": "^2.4.9",
    "@deboxsoft/zod": "^3.11.5"
  },
  "peerDependencies": {
    "@deboxsoft/module-core": "2.3.x || 2.4.x",
    "@deboxsoft/zod": "3.x"
  }
}
