{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "strict": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "declaration": false,
    "emitDeclarationOnly": true,
    "declarationDir": "src",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["src/types.d.ts"]
}
