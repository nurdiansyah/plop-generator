{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "strict": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationDir": "libs",
  },
  "include": ["src"]
}
