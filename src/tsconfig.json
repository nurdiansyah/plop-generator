{
  "include": ["./"],
  "exclude": ["**/**/**.test.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2020", "esnext.asynciterable"],
    "baseUrl": "./",
    "outDir": "../",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"],
    "rootDir": "./"
  }
}
